<% @posts.each do |post| %>
  
    <h2><%= link_to post.title, post %></h2> 
    <h3><%= post.created_at.strftime("%b %e at %l:%M%p") %></h3>
    <h4><%= truncate(post.content, :length => 500) %> - 
      <%= link_to 'Edit', edit_post_path(post) %> - 
      <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }%></h4>
  
<% end %>

<% if current_user %>
	<%= link_to 'New Post', new_post_path %>
<% end %>