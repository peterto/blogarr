<!DOCTYPE html>
<html>
<head>
  <title>Blogarr</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="wrapper">

    <div class="header">
      <%= render 'shared/header' %>
    </div>
    
    <div class="content">
      <%= yield %>
    </div>
    
    <div class="sidebar">
      <%= render 'shared/sidebar' %>
    </div>
    
  </div>
</body>
</html>
