<h2><%= link_to @post.title, post_path(@post) %> </h2>
<h3><%= @post.created_at.strftime("%b %e at %l:%M%p") %> by <%= User.find(@post.user_id).first_name %> </h3>
<%= @post.content %>

<% if current_user %>
	<div class="admin-controls">
	    <%= link_to 'Edit', edit_post_path(@post) %> - 
	    <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' }%></h4>
    </div>
<% end %>
